<%- include('../includes/header.ejs') %>
    <%- include('../includes/navigation-shop.ejs') %>
        <br>
        <main>
            <section class="bg-white border-b py-8">
                <div class="container mx-auto flex flex-wrap pt-4 pb-12">
                    <% if (hasProduct) { %>
                        <!-- {{#if hasProduct}} {{#each prods}} -->
                        <% for (let product of prods) { %>
                            <!-- <div class="grid grid-cols-1 md:grid-cols-6"> -->
                            <div class="w-full md:w-1/3 p-6 flex flex-col flex-grow flex-shrink">
                                <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow">
                                    <a href="/product/<%= product.id %>" class="flex flex-wrap no-underline hover:no-underline">
                                        <!-- <p class="w-full text-gray-600 text-xs md:text-sm px-6">
                                            xGETTING STARTED
                                        </p> -->
                                        <div class="w-full font-bold text-xl text-gray-800 px-0">
                                            <img src="<%= img_url+product.title %>" alt="">
                                        </div>
                                        <div class="w-full font-bold text-xl text-gray-800 px-6">
                                            <%= product.title %>
                                        </div>
                                        <p class="text-gray-800 text-base px-6 mb-5">
                                            <%= product.description %>
                                        </p>

                                    </a>
                                </div>
                                <div class="flex-none mt-auto bg-white rounded-b rounded-t-none overflow-hidden shadow p-6">
                                    <div class="flex items-center justify-start">
                                        <form action="/cart" method="POST">
                                            <input type="text" name="productId" value="<%= product.id %>">
                                            <button type="submit" class="mx-auto lg:mx-0 hover:underline gradient text-white font-bold rounded-full my-6 py-4 px-8 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out">
                                    Add to cart
                                  </button>
                                        </form>
                                        <p class="mx-auto text-gray-800 text-2xl my-6 py-4 px-8 mb-5 font-bold">
                                            â‚¹
                                            <%= product.price %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!-- </div> -->
                            <%} } else{ %>
                                <!-- {{/each}} {{else}} -->
                                <h2>No product found</h2>
                                <!-- {{/if}} -->
                                <% } %>
                </div>
            </section>
        </main>
        <%- include('../includes/footer.ejs') %>