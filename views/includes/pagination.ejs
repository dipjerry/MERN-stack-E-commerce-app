<div class="flex flex-col items-center my-12">
    <div class="flex text-gray-700">

        <% if(hasPreviousPage){ %>
            <div class="h-8 w-8 mr-1 flex justify-center items-center rounded-full bg-gray-200 cursor-pointer">
                <a href="/shop/?page=<%= previousPage %>"> <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-left w-4 h-4">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                </a>

            </div>
            <% } %>
                <div class="flex h-8 font-medium rounded-full bg-gray-200">
                    <% if(currentPage != 1){ %>
                        <div class="w-8 md:flex justify-center items-center hidden  cursor-pointer leading-5 transition duration-150 ease-in  rounded-full  "><a href="/shop/?page=1">1</a></div>

                        <% } %>
                            <% if(currentPage != previousPage && currentPage > 2) { %>
                                <div class="w-8 md:flex justify-center items-center hidden  cursor-pointer leading-5 transition duration-150 ease-in  rounded-full  ">
                                    <a href="/shop/?page=<%= currentPage+1 %>">
                                        <%= currentPage-1 %>
                                    </a>
                                </div>
                                <% } %>
                                    <div class="w-8 md:flex justify-center items-center hidden  cursor-pointer leading-5 transition duration-150 ease-in  rounded-full bg-pink-600 text-white ">
                                        <a href="/shop/?page=<%= currentPage %>">
                                            <%= currentPage %>
                                        </a>
                                    </div>
                                    <% if(nextPage != lastPage && currentPage != lastPage) { %>
                                        <div class="w-8 md:flex justify-center items-center hidden  cursor-pointer leading-5 transition duration-150 ease-in  rounded-full  ">
                                            <a href="/shop/?page=<%= currentPage+1 %>">
                                                <%= currentPage+1 %>
                                            </a>
                                        </div>
                                        <% } %>
                                            <% if(lastPage != currentPage) { %>


                                                <!-- <div class="w-8 md:flex justify-center items-center hidden  cursor-pointer leading-5 transition duration-150 ease-in  rounded-full  ">...</div> -->

                                                <div class="w-8 md:flex justify-center items-center hidden  cursor-pointer leading-5 transition duration-150 ease-in  rounded-full  ">
                                                    <a href="/shop/?page=<%= lastPage %>">
                                                        <%= lastPage %>
                                                    </a>
                                                </div>
                                                <% } %>
                </div>
                <% if(hasNextPage){ %>
                    <div class="h-8 w-8 ml-1 flex justify-center items-center rounded-full bg-gray-200 cursor-pointer">

                        <a href="/shop/?page=<%= nextPage %>">
                            <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-right w-4 h-4">
                        <polyline points="9 18 15 12 9 6"></polyline>
                    </svg>
                    </div>
                    <% } %>
    </div>
</div>