<%- include('../includes/header.ejs') %>
    <%- include('../includes/navigation-admin.ejs') %>

        <main>
            <div class="flex items-center min-h-screen bg-gray-50 dark:bg-gray-900">
                <div class="container mx-auto">
                    <div class="max-w-md mx-auto my-10 bg-red-50 p-5 rounded-md shadow-sm">
                        <div class="text-center">
                            <!-- <h1 class="my-3 text-3xl font-semibold text-gray-700 dark:text-gray-200">
                                <% if(editing){ %>Edit an existing product
                                    <% }else{ %>Add a new product
                                        <% } %>
                            </h1> -->
                            <h1 class="my-3 text-3xl font-semibold text-gray-700 dark:text-gray-200">
                                Login
                            </h1>
                        </div>
                        <div class="m-5">
                            <form action="/login" method="POST" id="form">
                                <div class="mb-6">
                                    <label for="userName" class="block mb-2 text-sm text-gray-600 dark:text-gray-400">Product userName</label>
                                    <input type="text" userName="title" id="userName" value="<% if(editing){ %><%= product.title%><% }else{ %><% } %>" placeholder="Product userName" required class="w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-blue dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500 text-black"
                                    />
                                </div>
                                <div class="mb-6">

                                    <label for="Password" class="text-sm text-gray-600 dark:text-gray-400">Password</label>
                                    <input type="text" userName="Password" id="Password" value="<% if(editing){ %><%= product.Password%><% }else{ %><% } %>" placeholder="Your product Password" required class="w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-red dark:placeholder-blue-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500 text-black"
                                    />
                                </div>

                                <input type="hidden" userName="productId" value="<% if(editing){ %><%= product._id%><% }else{ %><% } %>">
                                <div class="mb-6">
                                    <button type="submit" class="w-full px-3 py-4 text-white bg-indigo-500 rounded-md focus:bg-indigo-600 focus:outline-none"><% if(editing){ %>Update Product <% }else{ %>Add product<% } %></button>
                                </div>
                                <p class="text-base text-center text-gray-400" id="result">
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include('../includes/footer.ejs') %>